<div class="container-fluid font">
  <div class="row bg justify-content-between" name="home-bar" style="height:40px;">
    <div class="row col-6 align-items-center h-100 m-0 pr-0">
      <div class="col-4 pr-0 ml-3">
        <a class="navbar-brand float-right text-white" href="<%= discover_user_path(content: "photo", id:0) %>" ><%= t ('brand') %></a>
      </div>
      <div class="col py-1 h-100 pr-0">
        <input class="col h-100 rounded border-0" type="text" name="search-bar" placeholder="Search Photo / Album"/>
      </div>
    </div>
    <div class="row col-6 justify-content-end align-items-center m-0 pl-0">
      <div class="col-3">
        <%= link_to t('login'), new_user_session_path, {class: "btn text-white border-0 bg"}%>
      </div>
    </div>
  </div>
  <div class="row" style="height:30px;">
  </div>
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2 class="text-center text-color"><%= t ('.fotobook_signup')%></h2>
    </div>
  </div>
  <div class="row justify-content-center my-4">
    <div class="col-sm-3 col-8 row border rounded-lg py-2 justify-content-center" >
      <img src="https://img.icons8.com/color/48/000000/google-logo.png" class="img-fluid col-auto" />
      <img src="https://img.icons8.com/color/48/000000/facebook-circled.png" class="img-fluid col-auto" />
      <img src="https://img.icons8.com/color/48/000000/twitter-circled.png" class="img-fluid col-auto" />
    </div>
  </div>
  <div class="row justify-content-center mt-4">
    <div class="col-sm-4 col-8 row justify-content-center shadow border rounded bg-grey mb-5">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "mt-5 col"} )  do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field form-group mx-3" style="font-size: 16px">
          <%= f.label :firstname, t('.firstname')%><br />
          <%= f.text_field :firstname, autofocus: true, autocomplete: "firstname", placeholder: "First Name", class: "border rounded-lg form-control pl-3", style: "height:50px" %>
        </div>

        <div class="field form-group mx-3" style="font-size: 16px">
          <%= f.label :lastname, t('.lastname')%><br />
          <%= f.text_field :lastname, autocomplete: "lastname", placeholder: "Last Name", class: "border rounded-lg form-control pl-3", style: "height:50px" %>
        </div>

        <div class="field form-group mx-3" style="font-size: 16px">
          <%= f.label :email %><br />
          <%= f.email_field :email, autocomplete: "email", placeholder: "Email", class: "border rounded-lg form-control pl-3", style: "height:50px" %>
        </div>

        <div class="field form-group mx-3">
          <%= f.label :password, t('.password') %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "border rounded-lg form-control pl-3", style: "height:50px" %>
        </div>

        <div class="field form-group mx-3">
          <%= f.label :password_confirmation, t('.password_confirmation') %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password", class: "border rounded-lg form-control pl-3", style: "height:50px" %>
        </div>

        <div class="actions form-group row justify-content-center" style: "font-size:16px">
          <%= f.submit "Sign up", {class: "btn chosen col-4 rounded-lg", style: "height: 50px"} %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= javascript_pack_tag 'signup_validation.js'%>
